{
  "name": "securamem-vscode",
  "displayName": "SecuraMem",
  "description": "SecuraMem: Secure, air-gapped code memory for VSCode - Enterprise context durability and audit.",
  "version": "1.0.0",
  "publisher": "JeremyBrown",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "ai",
    "memory",
    "assistant",
    "context",
    "claude",
    "chatgpt",
    "copilot"
  ],
  "activationEvents": [
  "onCommand:smem.remember",
  "onCommand:smem.recall",
  "onCommand:smem.status",
  "onView:smem-memories"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
  "command": "smem.remember",
  "title": "üõ°Ô∏è Remember Selection",
  "category": "SecuraMem"
      },
      {
  "command": "smem.rememberWithContext",
  "title": "üõ°Ô∏è Remember with Context",
  "category": "SecuraMem"
      },
      {
  "command": "smem.recall",
  "title": "üîç Recall Memories",
  "category": "SecuraMem"
      },
      {
  "command": "smem.quickRecall",
  "title": "‚ö° Quick Recall",
  "category": "SecuraMem"
      },
      {
  "command": "smem.status",
  "title": "üìä Show Status",
  "category": "SecuraMem"
      },
      {
  "command": "smem.init",
  "title": "üöÄ Initialize Project",
  "category": "SecuraMem"
      },
      {
  "command": "smem.insertMemory",
  "title": "üìù Insert Memory",
  "category": "SecuraMem"
      },
      {
  "command": "smem.refreshMemories",
  "title": "üîÑ Refresh",
  "icon": "$(refresh)"
      },
      {
  "command": "smem.deleteMemory",
  "title": "üóëÔ∏è Delete",
  "icon": "$(trash)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "smem.remember",
          "group": "smem@1"
        },
        {
          "when": "editorHasSelection",
          "command": "smem.rememberWithContext",
          "group": "smem@2"
        }
      ],
      "editor/title": [
        {
          "command": "smem.quickRecall",
          "when": "resourceExtname != ''",
          "group": "navigation@1"
        }
      ],
      "view/title": [
        {
          "command": "smem.refreshMemories",
          "when": "view == smem-memories",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "smem.insertMemory",
          "when": "view == smem-memories && viewItem == memory",
          "group": "inline@1"
        },
        {
          "command": "smem.deleteMemory",
          "when": "view == smem-memories && viewItem == memory",
          "group": "inline@2"
        }
      ],
      "commandPalette": [
        {
          "command": "smem.refreshMemories",
          "when": "false"
        },
        {
          "command": "smem.deleteMemory",
          "when": "false"
        },
        {
          "command": "smem.insertMemory",
          "when": "false"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "smem-memories",
          "name": "üõ°Ô∏è SecuraMem Memories",
          "when": "smem.isInitialized"
        }
      ]
    },
    "viewsWelcome": [
      {
  "view": "smem-memories",
  "contents": "No memories found.\n[üõ°Ô∏è Remember Something](command:smem.remember)\n[üöÄ Initialize Project](command:smem.init)\nTo get started, initialize SecuraMem in your project or remember your first memory."
      }
    ],
    "keybindings": [
      {
  "command": "smem.remember",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorHasSelection"
      },
      {
  "command": "smem.recall",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      },
      {
  "command": "smem.quickRecall",
        "key": "ctrl+shift+q",
        "mac": "cmd+shift+q"
      }
    ],
    "configuration": {
  "title": "SecuraMem",
      "properties": {
  "smem.autoRemember": {
          "type": "boolean",
          "default": false,
          "description": "Automatically remember code snippets when copying"
        },
  "smem.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show memory count in status bar"
        },
  "smem.defaultContext": {
          "type": "string",
          "default": "vscode",
          "description": "Default context for memories created in VSCode"
        },
  "smem.maxRecallResults": {
          "type": "number",
          "default": 10,
          "description": "Maximum number of results to show in recall"
        },
  "smem.showOfflineIndicator": {
          "type": "boolean",
          "default": true,
          "description": "Show an offline (no egress) indicator in the status bar based on 'smem prove-offline'"
        },
  "smem.offlinePollInterval": {
          "type": "number",
          "default": 60,
          "description": "Seconds between status bar refresh polling for offline proof and memory count"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "child_process": "^1.0.2"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
  "url": "https://github.com/SecuraMem/smem-vscode"
  },
  "bugs": {
  "url": "https://github.com/SecuraMem/smem-vscode/issues"
  },
  "homepage": "https://securamem.com"
}